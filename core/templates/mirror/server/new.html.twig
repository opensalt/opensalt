{% extends 'layout.html.twig' %}

{% block title %}Add Mirrored Server | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Add New Mirrored Server</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <span class="col-sm-2"></span>
            <div class="col-sm-10">
                Go to <a href="{{ path('oauth_credentials_index') }}">Manage OAuth Credentials</a> to add new credentials.
            </div>

            <div class="form-group">
                <div class="col-sm-12 text-right">
                    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}

    <div class="text-right">
        <a href="{{ path('mirror_server_index') }}">back to list</a>
    </div>
{% endblock %}

